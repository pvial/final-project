<!-- Validation failure messages -->
<% if @contentido.errors.any? %>
  <% @contentido.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit contentido #<%= @contentido.id %>
</h1>

<hr>

<form action="/update_contentido/<%= @contentido.id %>" method="post">
  <!-- Label and input for eje_id -->
  <div class="form-group">
    <label for="eje_id">
      Eje
    </label>

    <input type="text" id="eje_id" name="eje_id" class="form-control" value="<%= @contentido.eje_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update contentido
  </button>
</form>

<hr>

<a href="/contentidos">
  Go back
</a>
